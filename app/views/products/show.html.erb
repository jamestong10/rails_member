<h1><%= @product.name %></h1>

<div class="item">
  Quantity: <%= @product.quantity %>
</div>
<div class="item">
  Price: <%= (user_signed_in? && is_premium?) ? discount_price(@product.price) : @product.price%>
</div>

<% if(@product.images.attached?) %>
  <% @product.images.each do |image| %>
    <div class="item">
      <%= image_tag(image) %>
    </div>
  <% end %>
<% end %>

